<div class="DayPage page {{ status }} {{ today }}">
  <div class="menu-bar">
    <div class="title">{{dateString}}</div>
    <a href="/" class="back left-button"><div class="logo"></div></a>
  </div>

  <div class="content">
    <a href="{{ route }}/in" class="check-in button">Check in</a>
    <div class="check-in-tip">
      Check into your gym to start your climbing!
    </div>

    <a href="{{ route }}/out" class="check-out button">Check out</a>
    <a class="log-climbs button">Log climbs</a>

    <div class="status">
      <select class="add-new-grade">
        <option value="ignore">Add a new grade</option>
        {{#each grades}}
          <option value="{{ id }}">{{ name }}</option>
        {{/each}}
        <option value="ignore"></option>
        <option value="cancel">Cancel</option>
      </select>
      {{#climbEntries climbs}}{{/climbEntries}}
    </div>
  </div>

</div>
