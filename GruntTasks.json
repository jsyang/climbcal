{
    "__loadNpmTasks__": [
        "grunt-contrib-jshint",
        "grunt-browserify",
        "grunt-contrib-clean",
        "grunt-contrib-copy",
        "grunt-contrib-cssmin",
        "grunt-contrib-watch",
        "grunt-extract-sourcemap",
        "grunt-contrib-uglify",
        "grunt-sass",
        "grunt-express-server"
    ],

    "cssmin" : {
        "build" : {
            "options" : {
                "keepSpecialComments" : 0
            },

            "files": {
                "dist/app.css": "dist/app.css"
            }
        }
    },

    "sass": {
        "dev": {
            "options": {
                "sourceMap": true
            },
            "files": {
                "dist/app.css": "app/app.init.scss"
            }
        },

        "build": {
            "options": {
                "sourceMap": false
            },
            "files": {
                "dist/app.css": "app/app.init.scss"
            }
        }
    },

    "jshint": {
        "build": {
            "src": [
                "app/**/*.js"
            ]
        }
    },

    "express": {
        "options": {
            "port": 8080
        },
        "local"  : {
            "options": {
                "script": "server/server.js"
            }
        },
        "test"   : {
            "options": {
                "script"  : "server/server.js",
                "node_env": "test"
            }
        }
    },

    "browserify": {
        "build": {
            "options": {
                "alias"            : [
                    "./node_modules/page/index.js:page",
                    "./node_modules/virtual-dom/h.js:virtual-dom/h",
                    "./node_modules/virtual-dom/diff.js:virtual-dom/diff",
                    "./node_modules/virtual-dom/patch.js:virtual-dom/patch",
                    "./node_modules/virtual-dom/create-element.js:virtual-dom/create-element",
                    "./node_modules/html-to-vdom/index.js:html-to-vdom",
                    "./node_modules/dexie/src/Dexie.js:dexie",
                    "./node_modules/kew/kew.js:kew",
                    "./node_modules/babyparse/babyparse.js:babyparse"
                ],
                "transform"        : [
                    ["dotify", {}]
                ]
            },

            "src": [
                "app/app.init.js"
            ],

            "dest": "dist/app.js"
        },

        "dev": {
            "options": {
                "alias" : [
                    "./node_modules/page/index.js:page",
                    "./node_modules/virtual-dom/h.js:virtual-dom/h",
                    "./node_modules/virtual-dom/diff.js:virtual-dom/diff",
                    "./node_modules/virtual-dom/patch.js:virtual-dom/patch",
                    "./node_modules/virtual-dom/create-element.js:virtual-dom/create-element",
                    "./node_modules/html-to-vdom/index.js:html-to-vdom",
                    "./node_modules/dexie/src/Dexie.js:dexie",
                    "./node_modules/kew/kew.js:kew",
                    "./node_modules/babyparse/babyparse.js:babyparse"
                ],
                "browserifyOptions": {
                    "debug": true
                },
                "transform"        : [
                    ["dotify", {}]
                ]
            },

            "src": [
                "app/app.init.js"
            ],

            "dest": "dist/app.js"
        }
    },

    "clean": {
        "prebuild": "dist/"
    },

    "copy": {
        "assets": {
            "expand": true,
            "src"   : ["assets/**"],
            "dest"  : "dist/"
        },

        "index": {
            "src"    : ["favicon.ico"],
            "dest"   : "dist/",
            "cwd"    : "application",
            "flatten": true,
            "expand" : true
        }
    },

    "watch": {
        "build": {
            "files": [
                "app/**/*"
            ],

            "tasks": [
                "default"
            ],

            "debounceDelay": 1000
        }
    },

    "extract_sourcemap": {
        "dist/": "dist/app.js"
    },

    "uglify": {
        "build": {
            "files"  : {
                "dist/app.js": ["dist/app.js"]
            }
        }
    }
}
